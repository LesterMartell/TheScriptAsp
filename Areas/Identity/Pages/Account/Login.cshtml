@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<h1 style="padding-top: 12px;">Вход</h1>
<div class="row" style="padding-top: 12px;">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h3>Введите логин и пароль.</h3>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    @* <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="username" value="profi.credit@profi-credit.ru" readonly/> *@
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="username"/>
                    <label asp-for="Input.Email" class="form-label">Логин</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Пароль</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3" hidden>
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Войти</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
